.container {

    background: #f7f7f8;
    min-height: 100vh;
    padding-bottom: 90rpx
}
.member-center {
  
}
.header {
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding: 40rpx 30rpx;
  color: #fff;
  background: linear-gradient(180deg,#85c43f,#b88626);
}
.header-text {
  color: #fff;
  line-height: 200rpx;
  text-align: center;
  font-size: 45rpx;

}
.tags {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 30rpx;
}
.tag {
  display: inline-block;
  border-radius: 14rpx;
  padding: 6rpx 20rpx;
  margin-right: 20rpx;
  color: #f0eeee;
}
.member-info {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  gap: 20rpx;
  flex-wrap: nowrap;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 30rpx;
  margin: 0 20rpx;
}
.memberfirst, .membersecond, .memberthird {
  flex: 0 0 80%;
  max-width: 80%;
  background: linear-gradient(145deg, #2b90ff, #1a73e8);
  text-align: center;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  position: relative;
  overflow: hidden;
}

.memberfirst:active, .membersecond:active, .memberthird:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}
.membersecond {
  background: linear-gradient(145deg, #1fb57a, #0d8a5a);
}
.memberthird {
  background: linear-gradient(145deg, #c89124, #a67c1b);
  margin-right: 0;
}
.card-head {
  font-size: 34rpx;
  font-weight: 600;
  color: #fff;
  padding: 30rpx 0 10rpx;
  position: relative;
  display: inline-block;
  margin: 0 auto;
}

.card-head:after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 2rpx;
}
.price {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin: 24rpx 0;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.price span {
  font-size: 28rpx;
  font-weight: normal;
  opacity: 0.9;
  margin-left: 4rpx;
}
.bullets {
  color: #fff;
  margin: 20rpx 0 0;
  font-size: 26rpx;
  background-color: rgba(255, 255, 255, 0.1);
  padding: 24rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  position: relative;
  min-height: 300rpx;
}
.bullet {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.6;
  text-align: left;
  padding-left: 36rpx;
  position: relative;
}

.bullet:before {
  content: 'âœ“';
  position: absolute;
  left: 0;
  font-weight: bold;
  color: #fff;
}
.btn {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  margin: 0 auto;
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #1a73e8;
  font-size: 28rpx;
  font-weight: 500;
  padding: 16rpx 0;
  width: calc(100% - 40rpx);
  text-align: center;
  line-height: 1.4;
  border: none;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.membersecond .btn {
  color: #1fb57a;
}

.memberthird .btn {
  color: #c89124;
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}
.check-mark {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 50rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  animation: checkIn 0.3s ease;
}

.memberfirst .check-mark {
  color: #1a73e8;
}

.membersecond .check-mark {
  color: #1fb57a;
}

.memberthird .check-mark {
  color: #c89124;
}

@keyframes checkIn {
  0% {
    transform: scale(0) rotate(-45deg);
    opacity: 0;
  }

  50% {
    transform: scale(1.2) rotate(10deg);
  }

  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

.selected {
  transform: scale(1.02);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.memberfirst.selected {
  box-shadow: 0 8rpx 24rpx rgba(26, 115, 232, 0.4);
}

.membersecond.selected {
  box-shadow: 0 8rpx 24rpx rgba(31, 181, 122, 0.4);
}

.memberthird.selected {
  box-shadow: 0 8rpx 24rpx rgba(200, 145, 36, 0.4);
}